<script>
  $(document).on("click", "#savenote", function() {
    
    var thisId = $(this).attr("data-id");
  
    $.ajax({
       method: "POST",
       url: "/articles/" + thisId,
       data: {
         body: $(".bodyinput").val()
       }
     })
       .then(function(data) {
         console.log(data);
