<h1>ESPN Fantasy Football Articles!</h1>

{{#each articles}}
    <h2>{{title}}</h2>
    <p>Article ID: {{id}}</p>
    <p>{{summary}}</p>
    <a href="{{link}}">{{link}}</a>
    <h4>Comments:</h4>
    <p>{{note}}</p>
    <h4>Add Comment</h4>
    <textarea class='bodyinput' name='body'></textarea><br>
    <button data-id={{id}} id='savenote'>Save Note</button>
{{/each}}
